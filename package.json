{
  "name": "portfolio-artist",
  "version": "1.0.0",
  "description": "Artist Portfolio Website",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/css/input.css -o ./src/css/output.css --watch",
    "build": "npx tailwindcss -i ./src/css/input.css -o ./src/css/output.css",
    "serve": "live-server --host=localhost --port=3000 --entry-file=index.html src",
    "start": "npm-run-all --parallel dev serve"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.3"
  }
}
